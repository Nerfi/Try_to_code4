

  <h1>Check Out The Gyms</h1>


 <div class="main-container">

    <div class="cards">


     <% @gyms.each do |gym| %>


      <div class="card"
        style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
         url('<%= cl_image_path gym.photo, height: 300, width: 400, crop: :fill %>')">

        <div class="card-category"><%= link_to  gym.name, gym_path(gym)%></div>
        <div class="card-description">
          <h2><%= gym.description %></h2>
          <p><%= gym.pricing  %></p>
         </div>

         <% if policy(gym).create? %>
         <%= link_to "New Gym", new_gym_path %>
          <% end %>

       <% if policy(gym).edit? %>
         <%= link_to "Update", edit_gym_path(gym) %>
        <% end %>
       <td>
       <% if policy(gym).destroy? %>
        <%= link_to 'Destroy', gym, method: :delete, remote: true ,data: { confirm: 'Are you sure ?'} %>


        <% end %>

        </div>

  <% end %>



  </div>






     <div
      id="map"
      style="width: 100%;
      height: 600px;"
      data-markers="<%= @markers.to_json %>"

    ></div>













</div>




